<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.przcode.controller.ContentController">
   <GridPane prefHeight="190.0" prefWidth="610.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="119.0" minWidth="0.0" prefWidth="119.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="373.0" minWidth="0.0" prefWidth="373.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="118.0" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button fx:id="btn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#createPasswordModel" text="Generate" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
               <Insets left="150.0" top="25.0" />
            </GridPane.margin></Button>
         <CheckBox fx:id="isDigit" mnemonicParsing="false" text="digit" GridPane.rowIndex="3" />
         <CheckBox fx:id="isLowerCase" contentDisplay="TOP" mnemonicParsing="false" text="lowercase" GridPane.rowIndex="1" />
         <TextField fx:id="passwordField" prefHeight="26.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         <CheckBox fx:id="isUpperCase" mnemonicParsing="false" prefHeight="18.0" prefWidth="122.0" text="uppercase" GridPane.rowIndex="2" />
         <CheckBox fx:id="isSpecialChar" mnemonicParsing="false" text="special char" GridPane.rowIndex="4" />
         <TextField fx:id="lengthPassword" onMouseClicked="#validateLengthPass" />
      </children>
   </GridPane>
</StackPane>
